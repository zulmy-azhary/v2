{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "types": ["astro/client"],
    "importsNotUsedAsValues": "preserve",
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"]
    },
  },
  "include": ["src", "src/**/*"],
  "exclude": ["node_modules", ".vscode"]
}
