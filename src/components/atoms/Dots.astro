---
interface Props {
  size: number;
  class?: string;
}

const { size, class: className } = Astro.props;
---


<div class:list={["grid", className || "grid-cols-5 gap-4"]}>
  {Array.from(new Array(size)).map((_) => (
    <span class="w-1 h-1 rounded-full bg-gradient-to-br from-primary to-accent bg-fixed" />
  ))}
</div>